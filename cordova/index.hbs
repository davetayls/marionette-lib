<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js"> <!--<![endif]-->
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="format-detection" content="telephone=no"/>
  <meta name="viewport" content="user-scalable=no, initial-scale=1, width=device-width, height=device-height"/>

  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">

  <!-- Set a shorter title for iOS6 devices when saved to home screen -->
  <meta name="apple-mobile-web-app-title" content="100 Holiday Words">

  <link rel="apple-touch-icon-precomposed" href="res/icon/cordova_32.png"/>
  <link rel="apple-touch-icon-precomposed" sizes="57x57" href="res/icon/cordova_ios_57.png"/>
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="res/icon/cordova_ios_72.png"/>
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="res/icon/cordova_ios_114.png"/>
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="res/icon/cordova_ios_144.png"/>

  <title>{{app_title}}</title>

  {{#each headSection.scripts}}
    <script src="{{this}}"></script>
  {{/each}}
  {{#each headSection.stylesheets}}
  <link rel="stylesheet" href="{{this}}"/>
  {{/each}}

  <script>
    if (Modernizr.old){
      document.write('<link rel="stylesheet" href="styles/index-old.css">');
    } else {
      document.write('<link rel="stylesheet" href="styles/index.css">');
    }
  </script>

</head>
<body data-platform="www" class="app platform-www">

<div class="snap-drawers">
  <div class="snap-drawer snap-drawer-left" id="side-menu"></div>
</div>

<div id="snap-content" class="snap-content">
  {{! Make sure all your bars are the first things in your <body> }}
  <header id="title-region" class="title_bar bar bar-nav">
    <h1 class="title_bar__title title">{{app_title}}</h1>
  </header>

  {{! Wrap all non-bar HTML in the .content div (this is actually what scrolls) }}
  <div id="content-region" class="content"></div>

  {{! Bottom bar of links }}
  <section id="bar-region"></section>

</div><!-- /.snap-content -->

<script>
  FastClick.attach(document.body);
</script>
<script src="lib/ratchet/dist/js/ratchet.js"></script>
<script src="cordova.js"></script>
<script>
  var require = {
    baseUrl: 'client'
  };
</script>
<script data-main="config" src="lib/requirejs/require.js"></script>

</body>
</html>
