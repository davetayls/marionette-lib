{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "Connection": false,
    "expect": false,
    "sinon": false
  },
  "rules": {
    "strict": false,
    "quotes": "single",
    "camelcase": false,
    "curly": false,
    "dot-notation": 0,
    "eol-last": 0,
    "new-cap": 1,
    "no-inner-declarations": 1,
    "no-return-assign": 0,
    "no-unused-vars": 1,
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,
    "no-shadow": 0
  }
}
